{
    // editor
    "editor.bracketPairColorization.enabled": true,
    "editor.cursorBlinking": "solid",
    "editor.fontFamily": "DejaVuSansM Nerd Font Mono",
    "editor.fontSize": 15,
    "editor.inlayHints.enabled": "off",
    "editor.insertSpaces": false,
    "editor.largeFileOptimizations": true,
    "editor.lineNumbers": "relative",
    "editor.links": false,
    "editor.rulers": [ 80 ],
    "editor.stickyScroll.enabled": true,
    "editor.stickyScroll.maxLineCount": 1,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.nonBasicASCII": false,
    // update
    "update.enableWindowsBackgroundUpdates": false,
    "update.mode": "none",
    "update.showReleaseNotes": false,
    // extensions
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    // workbench
    "workbench.startupEditor": "none",
    "workbench.welcomePage.walkthroughs.openOnInstall": false,
    "workbench.tree.enableStickyScroll": true,
    "workbench.iconTheme": "vscode-icons",
    // files
    "files.autoGuessEncoding": true,
    "files.associations": {
        ".clang-*": "yaml",
        ".clangd": "yaml"
    },
    // terminal
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.sendKeybindingsToShell": true,
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.allowChords": false,
    // explorer
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    // misc
    "search.followSymlinks": false,
    "window.restoreWindows": "none",
    "telemetry.telemetryLevel": "off",
    // vim
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.hlsearch": true,
    "vim.useCtrlKeys": true,
    "vim.showMarksInGutter": true,
    "vim.autoindent": false,
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-f>": false, "<C-b>": false,
        "<C-k>": false
    },
    "vim.insertModeKeyBindings": [
        { "before": [ "j", "j" ], "after": [ "<Esc>" ] }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": [ "u" ], "commands": [ "undo" ] },
        { "before": [ "J" ], "commands": [ "workbench.action.gotoSymbol" ] },
        { "before": [ "<C-r>" ], "commands": [ "redo" ] },
        { "before": [ "<C-l>" ], "commands": [ ":nohlsearch" ] },
        { "before": [ "<C-n>" ], "commands": [ "workbench.action.files.newUntitledFile" ] },
        { "before": [ "<C-p>" ], "commands": [ "workbench.action.quickOpen" ] },
        { "before": [ "<C-t>" ], "commands": [ "workbench.action.showAllSymbols" ] },
        { "before": [ "<C-i>" ], "commands": [ "workbench.action.navigateForward" ] },
        { "before": [ "<C-o>" ], "commands": [ "workbench.action.navigateBack" ] },
        { "before": [ "g", "d" ], "commands": [ "editor.action.revealDefinition" ] },
        { "before": [ "g", "D" ], "commands": [ "editor.action.peekDefinition" ] },
        { "before": [ "g", "f" ], "commands": [ "editor.action.revealDeclaration" ] },
        { "before": [ "g", "F" ], "commands": [ "editor.action.peekDeclaration" ] },
        { "before": [ "g", "t" ], "commands": [ "editor.action.goToTypeDefinition" ] },
        { "before": [ "g", "T" ], "commands": [ "editor.action.peekTypeDefinition" ] },
        { "before": [ "g", "i" ], "commands": [ "editor.action.goToImplementation" ] },
        { "before": [ "g", "I" ], "commands": [ "editor.action.peekImplementation" ] },
        { "before": [ "g", "H" ], "commands": [ "editor.action.referenceSearch.trigger" ] },
        { "before": [ "]", "e" ], "commands": [ "editor.action.marker.next" ] },
        { "before": [ "[", "e" ], "commands": [ "editor.action.marker.prev" ] },
        { "before": [ "]", "E" ], "commands": [ "editor.action.marker.nextInFiles" ] },
        { "before": [ "[", "E" ], "commands": [ "editor.action.marker.prevInFiles" ] },
        { "before": [ "<C-w>", "g", "d" ], "commands": [ "editor.action.revealDefinitionAside" ] }
    ],
    // extension specific
    "clangd.arguments": [
        "--header-insertion=never",
        "--function-arg-placeholders=false",
        "--pch-storage=memory"
    ],
    "vsicons.dontShowNewVersionMessage": true,
    "workspaceSidebar.cleanLabels": false,
    "workspaceSidebar.rootFolders": [],
    "remote.SSH.remotePlatform": {},
    "remote.SSH.localServerDownload": "always",
    "remote.SSH.useExecServer": true,
    "remote.SSH.useLocalServer": true,
    "remote.extensionKind": {
        "Continue.continue": [ "workspace" ]
    },
    "continue.enableTabAutocomplete": true,
    "continue.showInlineTip": false,
    "continue.telemetryEnabled": false,
    "continue.pauseCodebaseIndexOnStart": true,
}
