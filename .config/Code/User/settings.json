{
	// editor
	"editor.bracketPairColorization.enabled": true,
	"editor.cursorBlinking": "solid",
	"editor.fontFamily": "DejaVuSansM Nerd Font Mono",
	"editor.fontSize": 16,
	"editor.inlayHints.enabled": "off",
	"editor.insertSpaces": false,
	"editor.largeFileOptimizations": true,
	"editor.lineNumbers": "relative",
	"editor.links": false,
	"editor.rulers": [ 80 ],
	"editor.stickyScroll.enabled": true,
	"editor.stickyScroll.maxLineCount": 1,
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"editor.unicodeHighlight.nonBasicASCII": false,
	// update
	"update.enableWindowsBackgroundUpdates": false,
	"update.mode": "none",
	"update.showReleaseNotes": false,
	// extensions
	"extensions.autoCheckUpdates": false,
	"extensions.autoUpdate": false,
	"extensions.ignoreRecommendations": true,
	"extensions.experimental.affinity": {
		"vscodevim.vim": 1
	},
	// workbench
	"workbench.startupEditor": "none",
	"workbench.welcomePage.walkthroughs.openOnInstall": false,
	"workbench.tree.enableStickyScroll": true,
	"workbench.iconTheme": "vscode-icons",
	"workbench.editor.showTabs": "none",
	// files
	"files.insertFinalNewline": true,
	"files.autoGuessEncoding": true,
	"files.associations": {
		".clang-*": "yaml",
		".clangd": "yaml"
	},
	// terminal
	"terminal.integrated.fontSize": 16,
	"terminal.integrated.commandsToSkipShell": [
		"-workbench.action.files.newUntitledFile",
		"-workbench.action.quickOpen",
		"-workbench.action.quickOpenView",
		"-workbench.action.terminal.focusFind"
	],
	"terminal.integrated.defaultProfile.windows": "Git Bash",
	"terminal.integrated.enablePersistentSessions": false,
	"terminal.integrated.shellIntegration.enabled": false,
	"terminal.integrated.allowChords": false,
	// explorer
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.expand": false,
	"explorer.fileNesting.patterns": {
		"*.c": "${capture}.o",
		"*": ".${capture}.cmd"
	},
	// misc
	"search.followSymlinks": false,
	"window.restoreWindows": "none",
	"telemetry.telemetryLevel": "off",
	// vim
	"vim.easymotion": true,
	"vim.incsearch": true,
	"vim.hlsearch": true,
	"vim.useCtrlKeys": true,
	"vim.showMarksInGutter": true,
	"vim.autoindent": false,
	"vim.leader": "<space>",
	"vim.handleKeys": {
		"<C-k>": false
	},
	"vim.insertModeKeyBindings": [
		{ "before": [ "j", "j" ], "after": [ "<Esc>" ] }
	],
	"vim.normalModeKeyBindingsNonRecursive": [
		{ "before": [ "u" ], "commands": [ "undo" ] },
		{ "before": [ "J" ], "commands": [ "workbench.action.gotoSymbol" ] },
		{ "before": [ "<C-r>" ], "commands": [ "redo" ] },
		{ "before": [ "<C-h>" ], "commands": [ ":set hlsearch" ] },
		{ "before": [ "<C-l>" ], "commands": [ ":set nohlsearch" ] },
		{ "before": [ "<C-n>" ], "commands": [ "workbench.action.files.newUntitledFile" ] },
		{ "before": [ "<C-p>" ], "commands": [ "workbench.action.quickOpen" ] },
		{ "before": [ "<C-t>" ], "commands": [ "workbench.action.showAllSymbols" ] },
		{ "before": [ "<C-i>" ], "commands": [ "workbench.action.navigateForward" ] },
		{ "before": [ "<C-o>" ], "commands": [ "workbench.action.navigateBack" ] },
		{ "before": [ "g", "d" ], "commands": [ "editor.action.revealDefinition" ] },
		{ "before": [ "g", "D" ], "commands": [ "editor.action.peekDefinition" ] },
		{ "before": [ "g", "f" ], "commands": [ "editor.action.revealDeclaration" ] },
		{ "before": [ "g", "F" ], "commands": [ "editor.action.peekDeclaration" ] },
		{ "before": [ "g", "t" ], "commands": [ "editor.action.goToTypeDefinition" ] },
		{ "before": [ "g", "T" ], "commands": [ "editor.action.peekTypeDefinition" ] },
		{ "before": [ "g", "l" ], "commands": [ "editor.action.goToImplementation" ] },
		{ "before": [ "g", "L" ], "commands": [ "editor.action.peekImplementation" ] },
		{ "before": [ "g", "H" ], "commands": [ "editor.action.referenceSearch.trigger" ] },
		{ "before": [ "g", "h", "c" ], "commands": [ "editor.showCallHierarchy" ] },
		{ "before": [ "g", "h", "t" ], "commands": [ "editor.showTypeHierarchy" ] },
		{ "before": [ "]", "e" ], "commands": [ "editor.action.marker.next" ] },
		{ "before": [ "[", "e" ], "commands": [ "editor.action.marker.prev" ] },
		{ "before": [ "]", "E" ], "commands": [ "editor.action.marker.nextInFiles" ] },
		{ "before": [ "[", "E" ], "commands": [ "editor.action.marker.prevInFiles" ] },
		{ "before": [ "]", "c" ], "commands": [ "workbench.action.compareEditor.nextChange" ] },
		{ "before": [ "[", "c" ], "commands": [ "workbench.action.compareEditor.previousChange" ] },
		{ "before": [ "]", "C" ], "commands": [ "workbench.action.editor.nextChange" ] },
		{ "before": [ "[", "C" ], "commands": [ "workbench.action.editor.previousChange" ] },
		{ "before": [ "<C-w>", "g", "d" ], "commands": [ "editor.action.revealDefinitionAside" ] },
		{ "before": [ "<leader>", "p" ], "after": [ "\"", "+", "p" ] }
	],
	"vim.visualModeKeyBindingsNonRecursive": [
		{ "before": [ "<leader>", "y" ], "after": [ "\"", "+", "y" ] },
		{ "before": [ "<leader>", "p" ], "after": [ "\"", "+", "p" ] },
		{ "before": [ "<leader>", "P" ], "after": [ "\"", "_", "d", "P" ] }
	],
	// extension specific
	"clangd.arguments": [
		"--header-insertion=never",
		"--function-arg-placeholders=false",
		"--pch-storage=memory"
	],
	"vsicons.dontShowNewVersionMessage": true,
	"projectManager.tags": [],
	"remote.SSH.remotePlatform": {},
	"remote.SSH.localServerDownload": "always",
	"remote.SSH.useExecServer": true,
	"remote.SSH.useLocalServer": true,
	"remote.extensionKind": {
		"Continue.continue": [ "workspace" ]
	},
	"continue.enableTabAutocomplete": true,
	"continue.showInlineTip": false,
	"continue.telemetryEnabled": false,
	"continue.pauseCodebaseIndexOnStart": true,
}
